<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/darkorange"
    android:padding="10dp"
>
    <ImageView
        android:id="@+id/newsIcn"
        android:contentDescription="@string/img_description"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:src="@drawable/news" />
    <TextView
        android:id="@+id/newsHdr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/newsIcn"
        android:paddingBottom="5dip"
        android:textSize="18sp"
        android:textColor="#0019fc" />
    <TextView
        android:id="@+id/newsDesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/newsIcn"
        android:layout_below="@id/newsHdr"
        android:textSize="14sp"
        android:textColor="#000" />

</RelativeLayout><!-- From: file:/C:/Documents%20and%20Settings/EK/AndroidstudioProjects/WebMenuApp/webMenuApp/src/main/res/layout/news_3d_list_menu.xml -->